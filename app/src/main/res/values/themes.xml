<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.JIAN_JZ" parent="Theme.Design.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/app_color</item>
    </style>


    <style name="Theme.JIAN_JZ" parent="Base.Theme.JIAN_JZ" />

    <style name="AppTheme.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--将顶部状态栏设置为透明，并将界面内容布局上边界上提至状态栏顶部-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--如果有底部虚拟导航栏，则将底部虚拟导航栏设置为透明，并将界面内容布局下边界下沉至虚拟导航栏底部-->
        <item name="android:windowTranslucentNavigation">true</item>
        <!--给window窗口设置背景图-->
        <item name="android:windowBackground"></item>
    </style>
</resources>