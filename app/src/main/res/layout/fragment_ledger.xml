<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="简记账"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_title2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/rl_title"
        android:background="@color/app_color">
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_titie"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/rl_title"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_time_select"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_bill_time_year"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                tools:text="2024年"
                android:textSize="18sp"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_bill_time_month"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    tools:text="08"
                    android:textSize="25sp"
                    android:textColor="@color/white"/>
                <ImageView
                    android:id="@+id/img_bill_time_select"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/icon_timeselect"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#DCDCDC"
            android:layout_marginTop="10dp">
        </View>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="支出（元）"
                android:textSize="15sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_bill_out"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                tools:text="1145.14"
                android:textSize="18sp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="收入（元）"
                android:textSize="15sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_bill_in"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                tools:text="1919.81"
                android:textSize="18sp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_bill_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/icon_add"/>
    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_titie">
        <com.scwang.smartrefresh.layout.header.BezierRadarHeader
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.scwang.smartrefresh.layout.header.BezierRadarHeader>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_bill_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_titie">
        </androidx.recyclerview.widget.RecyclerView>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.scwang.smartrefresh.layout.footer.ClassicsFooter>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>








</RelativeLayout>