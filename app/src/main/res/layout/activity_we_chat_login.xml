<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Activity.WeChatLogin">

    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        >
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_icon_app"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@mipmap/icon_app_pk"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/img_icon_app"
        android:layout_marginTop="10dp"
        android:text="简单记账"
        android:textSize="40sp"
        android:textColor="@color/app_color"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_back"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_aplogin"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="账号密码登录"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="@drawable/shape_login_form"/>
            <TextView
                android:id="@+id/tv_weixinlogin"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_below="@+id/tv_aplogin"
                android:layout_marginTop="30dp"
                android:text="微信登陆"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="@drawable/shape_login_form"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignTop="@id/tv_weixinlogin"
                android:layout_marginTop="7.5dp"
                android:layout_marginLeft="7.5dp"
                android:src="@mipmap/weixin"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@id/tv_aplogin"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/account"/>

        </RelativeLayout>




</RelativeLayout>